## Quick Integration (30 Minutes)

### Step 1: Install SDK

```bash
npm install @onramp.money/onramp-web-sdk
```

### Step 2: Add to Your Wallet

```typescript
// src/components/OnrampButton.tsx
'use client'

import { useEffect } from 'react'

interface OnrampButtonProps {
    walletAddress: string
    onSuccess?: () => void
}

export function OnrampButton({ walletAddress, onSuccess }: OnrampButtonProps) {
    useEffect(() => {
        // Load Onramp.money SDK
        const script = document.createElement('script')
        script.src = 'https://widget.onramp.money/widget.js'
        script.async = true
        document.body.appendChild(script)
    }, [])
    
    const openOnramp = () => {
        // @ts-ignore - Onramp widget
        if (window.OnrampMoneyWidget) {
            const widget = new window.OnrampMoneyWidget({
                // Required params
                walletAddress: walletAddress,
                fiatCurrency: 'INR',
                cryptoCurrency: 'USDC',
                network: 'STELLAR',
                
                // Optional customization
                appName: 'MiniPay',
                theme: 'light',
                primaryColor: '#6366f1', // Indigo
                
                // Callbacks
                onSuccess: (transaction: any) => {
                    console.log('[ONRAMP] Success:', transaction)
                    onSuccess?.()
                },
                onClosed: () => {
                    console.log('[ONRAMP] Widget closed')
                }
            })
            
            widget.show()
        }
    }
    
    return (
        <button 
            onClick={openOnramp}
            className="w-full bg-gradient-to-r from-indigo-600 to-violet-600 text-white py-3 px-6 rounded-xl font-semibold"
        >
            üí≥ Add Money (UPI)
        </button>
    )
}
```

